<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
  <ModulePrefs title="Incident Panel" 
  description="Display current system or monitor incidents."
          thumbnail="thumb.png"
  /> 
  <Content type="html">
<![CDATA[ 
<html>
<head>
	#includeResources(uptimecss,jquery,jqueryUi)
	<title>Incident Panel</title>
	
	<link rel="stylesheet" type="text/css"
		href="__UPTIME_GADGET_BASE__/number-polyfill.css" />
	<link rel="stylesheet" type="text/css"
		href="__UPTIME_GADGET_BASE__/incidentPanel.css" />
	<script type="text/javascript"
		src="__UPTIME_GADGET_BASE__/jquery.ba-throttle-debounce.min.js">
	</script>
	<script type="text/javascript"
		src="__UPTIME_GADGET_BASE__/number-polyfill.js">
	</script>
	<script type="text/javascript"
		src="__UPTIME_GADGET_BASE__/tree.js">
	</script>
	<script type="text/javascript"
		src="__UPTIME_GADGET_BASE__/api_queries.js">
	</script>
	<script type="text/javascript"
		src="__UPTIME_GADGET_BASE__/incidentPanel.js">
	</script>
</head>

<body>

	<div id="incidentPanelGadget">
		<div id="editPanel" class="editPanel">
			<div class="contentType">
				Display incidents for:
				<input type="radio" class="radio" name="contentType" value="elements" id="elementsRadio" />
				<label for="elementsRadio">Elements</label>
				<input type="radio" class="radio" name="contentType" value="monitors" id="monitorsRadio" />
				<label for="monitorsRadio">Monitors</label>
			</div>
			<div class="groups">
				<label for="groups">Display Groups (including subgroups):</label>
				<select id="groups" />
			</div>
			<div class="refreshRate">
				<label for="refreshRate">Refresh Interval (s):</label>
				<input id="refreshRate" type="number" min="5" max="300" value="10" />
			</div>
			<div class="closeButton">
				<button id="closeButton">Close</button>
			</div>
		</div>
	
		<div id="statusBar"
			style="display: none; width: 100%; font-weight: bold; font-size: larger;">
			Backend Call Status
		</div>
		
		<div id="incidentPanel">
			<div id="incidentPanelGroup">
			</div>
			<div id="incidentPanelTable">
			</div>
		</div>
	</div>

	<span style="position: fixed" id="incidentPanelTooltip"></span>

</body>
</html>
]]>
  </Content> 
</Module>
